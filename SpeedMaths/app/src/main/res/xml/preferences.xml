<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="Your Name"
        android:key="username"
        android:defaultValue="Sherlock"
        android:summary="Please provide your username">
    </EditTextPreference>

    <CheckBoxPreference android:title="Application Updates"
        android:defaultValue="false"
        android:summary="This option if selected will allow the application to check for latest versions."
        android:key="applicationUpdates" />

    <ListPreference     android:title="Addition and Subtraction"
        android:summary="Select the level for your practice"
        android:key="addLEVEL"
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />

    <ListPreference     android:title="Multiplication and Division"
        android:summary="Select the level for your practice"
        android:key="mulLEVEL"
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />

    <ListPreference     android:title="Equations!"
        android:summary="Select the level for your practice"
        android:key="mixedLEVEL"
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />

    <ListPreference     android:title="Lo{}op!"
        android:summary="Select the level for your practice"
        android:key="loopLEVEL"
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />

    <ListPreference     android:title="TwoSome"
        android:summary="Select the level for your practice"
        android:key="duelLEVEL"
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />

</PreferenceScreen>