<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textAlignment="center">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Testing 1 2 3"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:background="@drawable/textview_bg"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/P1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/PercentileT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Percentile"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:typeface="monospace"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/percentBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                custom:circle_progress="-20"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/P2"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/AddT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add &amp; Subtract"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:typeface="monospace"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/addBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                custom:circle_progress="-20"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/P3"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Multiply &amp; Divide"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:typeface="monospace"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/mulBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                custom:circle_progress="-20"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/P4"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/MixedT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Equations"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:typeface="monospace"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/mixedBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                custom:circle_progress="-20"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/P5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/LoopT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Memory"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:typeface="monospace"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/loopBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                custom:circle_progress="-20"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>
    </LinearLayout>

</LinearLayout>