<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center">



        <TextView
            android:text="Make me your habit!"
            android:id="@+id/TIP"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/textview_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C0392B"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:radius="6dp"
            android:background="@drawable/b1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+ &amp; -"
            android:textStyle="bold"
            android:id="@+id/addbutton"/>

        <Button
            android:radius="60dp"
            android:background="@drawable/b2"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x &amp; /"
            android:textStyle="bold"
            android:id="@+id/mulbutton"/>

        <Button
            android:background="@drawable/b3"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:width="6dp"
            android:height="6dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Equations"
            android:textStyle="bold"
            android:id="@+id/mixdbutton"      />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/b4"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Looop"
            android:textStyle="bold"
            android:id="@+id/loopbutton"
            />

        <Button
            android:background="@drawable/b5"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TwoSome"
            android:textStyle="bold"
            android:id="@+id/duelbutton"
            />

        <Button
            android:background="@drawable/b6"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Strengths"
            android:textStyle="bold"
            android:id="@+id/strenghtbutton"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/b7"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cheat"
            android:textStyle="bold"
            android:id="@+id/showoffbutton"
            />

        <Button
            android:background="@drawable/b8"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Settings"
            android:textStyle="bold"
            android:id="@+id/settingsbutton"
            />

        <Button
            android:background="@drawable/b9"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="About"
            android:textStyle="bold"
            android:id="@+id/aboutUsbutton"
            />
    </LinearLayout>
</LinearLayout>